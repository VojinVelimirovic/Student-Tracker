<Window
    x:Class="StudentTracker.ExtraWindows.RemoveSemesterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StudentTracker.ExtraWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Remove Semester"
    Width="600"
    Height="350"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Margin="0,20,0,0"
            Content="Select semester"
            FontFamily="Comic Sans ms"
            FontSize="40"
            FontStyle="Italic"
            Foreground="DarkSlateGray" />
        <ComboBox
            x:Name="SemesterComboBox"
            Grid.Row="1"
            Width="500"
            Height="50"
            FontSize="30"
            SelectionChanged="SemesterComboBox_SelectionChanged" />
        <Button
            Name="RemoveButton"
            Grid.Row="2"
            Width="300"
            Margin="30"
            HorizontalAlignment="Right"
            Click="Button_Click"
            Content="Remove"
            FontSize="20"
            IsEnabled="False" />
    </Grid>
</Window>
